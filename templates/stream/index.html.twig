{% extends 'base.html.twig' %}

{% block title %}Stream index{% endblock %}

{% block body %}
    <h1>Mes Streams</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jeu</th>
                <th>StartDate</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stream in streams %}
            <tr>
                <td>{{ stream.id }}</td>
                <td>{{ stream.jeu ? stream.jeu.name : 'No game' }}</td>
                <td>{{ stream.startDate ? stream.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stream.url }}</td>
                <td>
                    <a href="{{ path('app_stream_show', {'id': stream.id}) }}">show</a>
                    <a href="{{ path('app_stream_edit', {'id': stream.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stream_new') }}">Create new</a>
{% endblock %}
